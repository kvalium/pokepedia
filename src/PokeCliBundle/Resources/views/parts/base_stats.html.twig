<div class="row">
    {% if pokemon is defined and pokemon is not empty %}
        <div class="col-md-6">
            <h2>Data</h2>
            <table class="table">
                <tr>
                    <td>{% trans %}PokedexÂ #{% endtrans %}</td>
                    <td>{{ pokemon.iD }}</td>
                </tr>
                <tr>
                    <td>{% trans %}Weight{% endtrans %}</td>
                    <td>{{ pokemon.weight }} kg</td>
                </tr>
                <tr>
                    <td>{% trans %}Height{% endtrans %}</td>
                    <td>{{ pokemon.height }} m</td>
                </tr>
                <tr>
                    <td>{% trans %}Base XP{% endtrans %}</td>
                    <td>{{ pokemon.baseExperience }}</td>
                </tr>
            </table>
        </div>
    {% endif %}

    {% if stats is defined and stats is not empty %}
        <div class="col-md-6">
            <h2>{% trans %}Stats{% endtrans %}</h2>
            <table class="table">
                {% for statName, statVal in stats %}
                    <tr>
                        <td>{{ statName|humanize|trans }}</td>
                        <td>{{ statVal }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    {% endif %}
</div>