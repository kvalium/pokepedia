{% extends 'base.html.twig' %}
{% block title %}
    {% trans %}Pokepedia search results{% endtrans %}
{% endblock %}

{% block content %}

    {% set nbResults = results.count %}
    <h1>
        {% transchoice nbResults %}
        {0} No results!|{1} One result |]1,Inf[ %nbResults% results
        {% endtranschoice %}

    </h1>


    {% if results.results is not empty %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
            </tr>
            </thead>
        {% for result in results.results %}
            <tr>
                <td><a href="{{ path('pokemon_details', {'name': result}) }}">{{ result|humanize }}</a></td>
            </tr>
        {% endfor %}
        </table>
    {% endif %}
{% endblock %}
